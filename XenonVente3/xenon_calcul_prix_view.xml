<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      
    <record id="view_calculpx_list_xenon" model="ir.ui.view">
                <field name="name">calcul.prix.liste.xenon</field>
                <field name="model">x_calculprix</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="x_libelle"/>
                        <field name="x_datedebut"/>
                        <field name="x_datefin"/>
                    </tree>
                </field>
    </record>
      
    <record id="view_calculpx_form_xenon" model="ir.ui.view">
                <field name="name">calcul.prix.form.xenon</field>
                <field name="model">x_calculprix</field>
                <field name="arch" type="xml">
                    <form>
                        <group>
                        <field name="x_libelle"/>
                        <field name="x_datedebut"/>
                        <field name="x_datefin"/>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="x_detail_id">
                                    <form>
                                        <group>
                                        <field name="x_min"/>
                                        <field name="x_max"/>
                                        <field name="x_marge"/>
                                        </group>
                                    </form>
                                    <tree>
                                        <field name="x_min"/>
                                        <field name="x_max"/>
                                        <field name="x_marge"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </form>
                </field>
    </record>
      
    <record model="ir.actions.act_window" id="calculprix_action">
      <field name="name">XenonCalculPrix</field>
      <field name="res_model">x_calculprix</field>
      <field name="view_mode">tree,form</field>
    </record>
      
    <menuitem id="calculprix_config"
        name="CalculPrix"
        parent="sale.menu_sale_config"
        action="calculprix_action"
        sequence="15"/>
      
  </data>
</odoo>

