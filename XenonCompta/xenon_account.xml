<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_account_form_xenon" model="ir.ui.view">
            <field name="name">account.account.xenon</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_id']" position="after">
                    <field name="x_group_id" string="groupe xenon"/>
                </xpath>
            </field>
    </record>


	<record id="view_account_list_xenon" model="ir.ui.view">
        <field name="name">account.account.list.xenon</field>
        <field name="model">account.account</field>
		<field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
			<xpath expr="//field[@name='group_id']" position="after">
                <field name="x_group_id" optional="show"/>
            </xpath>

        </field>
    </record>
</odoo>