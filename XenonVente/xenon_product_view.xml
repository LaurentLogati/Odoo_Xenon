<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_category_list_view_xenon" model="ir.ui.view">
        <field name="name">product.category.list.xenon</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="property_account_expense_categ_id"/>
                <field name="property_account_income_categ_id"/>
                <field name="x_filtre" optional="show"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_category_form_view_xenon" model="ir.ui.view">
        <field name="name">product.category.form.xenon</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="x_filtre"/>
            </xpath>
        </field>
    </record>
	
	<!--Nom de l article modifiable seulement à partir de progdigital et suppression du bouton créer-->
    <record id="product_template_form_view_xenon" model="ir.ui.view">
        <field name="name">product.template.common.form.xenon</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">True</attribute> 
            </xpath>
            <xpath expr="/form" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
			<xpath expr="//field[@name='active']" position="before">
                <field name="x_emplacement" string="Emplacement Fly"/>
				<field name="x_emplacement2" string="Emplacement ASA"/>
            </xpath>															
        </field>
    </record>
	
	<!--Suppression du bouton créer un article dans les vues-->
    <record id="product_template_kanban_view_xenon" model="ir.ui.view">
        <field name="name">Product.template.product.kanban.xenon</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="/kanban" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_xenon" model="ir.ui.view">
        <field name="name">product.template.product.tree.xenon</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
			<xpath expr="//field[@name='uom_id']" position="after">
                <field name="x_emplacement" string="Emplacement Fly" optional="show"/>
                <field name="x_emplacement2" string="Emplacement ASA" optional="show"/>
            </xpath>
        </field>
    </record>
	
	<!-- addons/stock/views/product_views.xml
    changement du nom qté disponible ou en prévision On hand
    vue product_template_kanban_stock_view (Product Template Kanban Stock) désactivée via ihm menu technique-->
    <record model="ir.ui.view" id="product_template_kanban_stock_view_xenon">
            <field name="name">Product Template Kanban Stock Xenon</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='product_lst_price']" position="after">
                    <div>Disponible: <field name="qty_available"/> <field name="uom_id"/></div>
                    <div>Prévisions: <field name="virtual_available"/> <field name="uom_id"/></div>
                </xpath>
            </field>
        </record>
	<!-- regroupement de la liste d'article par x_emplacement-->
    <record id="product_template_search_view_xenon" model="ir.ui.view">
        <field name="name">product.template.search.xenon</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search[1]/group[1]/filter[@name='categ_id']" position="after">
                <filter name="xenon_x_emplacement" string="Emplacements de stock Fly" context="{'group_by': 'x_emplacement'}"/>
                <filter name="xenon_x_emplacement2" string="Emplacements de stock ASA" context="{'group_by': 'x_emplacement2'}"/>
            </xpath>
        </field>
    </record>															
</odoo>