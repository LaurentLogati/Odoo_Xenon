<?xml version="1.0" encoding="utf-8"?>
<odoo>
 <record id="view_order_form_xenon2" model="ir.ui.view">
            <field name="name">purchase.order.form.xenon</field>
            <field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
            <xpath expr="//button[@name='print_quotation'][1]" position="attributes">   
                <attribute name="invisible">True</attribute>    
            </xpath> 
            <xpath expr="//button[@name='print_quotation'][2]" position="attributes">   
                <attribute name="invisible">True</attribute>    
            </xpath> 
            <xpath expr="//button[@name='button_confirm'][2]" position="attributes">  
                <attribute name="states">tosend</attribute>
                <attribute name="attrs">{'invisible': [('origin', '!=', False)]}</attribute>
            </xpath> 
			<button name="button_confirm" position="replace">
                <button name="attente_client_confirm" 
                        type="object" 
                        string="Maj devis Client" 
                        id="attente_client_confirm"
                        attrs="{'invisible': [('state', 'in', ['draft', 'wait','tosend','purchase'])]}"/>
			</button>
            <button name="button_cancel" position="replace">
                <button name="button_cancel" states="draft,to approve,sent,wait,tosend,purchase" string="Annuler" type="object" />
            </button>
			<button name="button_done" position="after">
                <button name="button_acompte" 
                        type="object" 
                        string="Acompte frs" 
                        states="purchase"/>
            </button> 
            <field name="state" position="replace">
				<field name="state" widget="statusbar" statusbar_visible="draft,sent,wait,tosend,purchase" readonly="1"/>
            </field>
			</field>
 </record>
</odoo>